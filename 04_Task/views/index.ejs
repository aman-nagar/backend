<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Task</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none"
            type="text"
            name="title"
            id="title"
            placeholder="Title"
          />
          <textarea
            class="block px-5 py-2 bg-zinc-800 resize-none mt-2 w-full rounded-md outline-none"
            name="details"
            placeholder="task details"
          ></textarea>
          <input
            class="block px-5 py-2 bg-blue-600 mt-2 rounded-md"
            type="submit"
            value="Create Task"
          />
        </form>
        <div class="tasks pt-10 flex gap-3 flex-wrap">
          <% if(files.length>0){ %> <% files.map((val)=>{ %>

          <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
            <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
            <div class="flex w-full justify-between items-center mt-3">
              <a class="text-blue-500 initial-block" href="/files/<%= val  %>">
                Read More</a
              >
              <a class="text-zinc-600" href="/edit/<%= val %>">edit</a>
            </div>
          </div>
          <% }) %> <% } else { %>
          <h3 class="text-zinc-600">no taskyet.</h3>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
