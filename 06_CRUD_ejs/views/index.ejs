        <input
          name="image"
          type="text"
          placeholder="image url"
          class="px-5 py-3 bg-transparent border-2 border-zinc-800 rounded-lg outline-none"
        />
        <input
          class="px-5 py-2 bg-blue-500 rounded-lg ml-5"
          type="submit"
          value="Create User"
        />
      </form>
    </div>
